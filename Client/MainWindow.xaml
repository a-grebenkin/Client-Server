<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label DockPanel.Dock="Bottom" Width="300" Height="50" FontSize="20" Content="Text message"/>
            <TextBox DockPanel.Dock="Bottom" x:Name="textBox1" Width="300" Height="50" FontSize="20" VerticalAlignment="Top" Margin="20"/>
            <Button x:Name="button1" Width="300" Height="50" FontSize="20" Content="Send" Click="Button_Click"/>
            <Label DockPanel.Dock="Bottom" Width="300" Height="50" FontSize="20" Content="Received message"/>
            <Label  x:Name="label1" DockPanel.Dock="Bottom" Width="300" Height="50" FontSize="20" />
        </StackPanel>
    </Grid>
</Window>
